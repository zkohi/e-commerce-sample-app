.panel.panel-danger
  .panel-heading
    %h2.panel-title ユーザー一覧
  .panel-body
    %table.table.table-striped.table-hover
      %thead
        %tr
          %th ID
          %th メールアドレス
          %th
          %th
          %th

      %tbody
        - @users.each do |user|
          %tr
            %td= user.id
            %td= user.email
            %td= link_to 'Show', [:admin, user]
            %td= link_to 'Edit', edit_admin_user_path(user)
            %td= link_to 'Destroy', [:admin, user], method: :delete, data: { confirm: '削除してよろしいですか?' }
