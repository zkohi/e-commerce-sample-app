-if notice
  %p.alert.alert-dismissible.alert-success#notice= notice

.panel.panel-warning
  .panel-heading
    %h2.panel-title 注文詳細
  .panel-body
    %p
      %b User:
      = @order.user_id
    %p
      %b State:
      = @order.state
    %p
      %b Shipment state:
      = @order.shipment_state
    %p
      %b Payment state:
      = @order.payment_state
    %p
      %b Item count:
      = @order.item_count
    %p
      %b Item total:
      = @order.item_total
    %p
      %b Shipment total:
      = @order.shipment_total
    %p
      %b Payment total:
      = @order.payment_total
    %p
      %b Tax total:
      = @order.tax_total
    %p
      %b Total:
      = @order.total

= link_to '編集', edit_admin_order_path(@order)
\|
= link_to '注文一覧', admin_orders_path
