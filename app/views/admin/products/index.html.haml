%h1 Listing products

%table
  %thead
    %tr
      %th Name
      %th Filename
      %th Price
      %th Description
      %th Flg non display
      %th Sort order
      %th
      %th
      %th

  %tbody
    - @products.each do |product|
      %tr
        %td= product.name
        %td= product.filename
        %td= product.price
        %td= product.description
        %td= product.flg_non_display
        %td= product.sort_order
        %td= link_to 'Show', product
        %td= link_to 'Edit', edit_product_path(product)
        %td= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Product', new_product_path
