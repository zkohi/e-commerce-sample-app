.panel.panel-warning
  .panel-heading
    %h2.panel-title  クーポン・ポイント履歴一覧
  .panel-body
    %div
      %table.table.table-striped.table-hover
        %thead
          %tr
            %th= User.human_attribute_name(:id)
            %th= Coupon.human_attribute_name(:id)
            %th= Coupon.human_attribute_name(:title)
            %th= Coupon.human_attribute_name(:code)
            %th= UserPoint.human_attribute_name(:point)

        %tbody
          - @user_points.each do |user_point|
            %tr
              %td= user_point.user.id
              %td= user_point.coupon.id
              %td= user_point.coupon.title
              %td= user_point.coupon.code
              %td= number_with_delimiter(user_point.point)

      = paginate @user_points
