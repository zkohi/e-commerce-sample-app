%h1 Listing orders

%table
  %thead
    %tr
      %th User
      %th State
      %th Shipment state
      %th Payment state
      %th Item count
      %th Item total
      %th Shipment total
      %th Payment total
      %th Tax total
      %th Total
      %th
      %th
      %th

  %tbody
    - @orders.each do |order|
      %tr
        %td= order.user_id
        %td= order.state
        %td= order.shipment_state
        %td= order.payment_state
        %td= order.item_count
        %td= order.item_total
        %td= order.shipment_total
        %td= order.payment_total
        %td= order.tax_total
        %td= order.total
        %td= link_to 'Show', order
        %td= link_to 'Edit', edit_order_path(order)
        %td= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }
