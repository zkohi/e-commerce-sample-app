.content.row
  .col-lg-3
    .panel.panel-default
      .panel-body.text-center
        = image_tag(current_user.img_filename, class: 'img-thumbnail', size: "100x100")
        = current_user.nickname

    .panel.panel-default
      .panel-body
        %p= link_to "登録情報を変更する", edit_user_registration_path
        %p= link_to "注文履歴を見る", orders_path
        %p= link_to "クーポン一覧を見る", coupons_path
        %p= link_to "ポイント履歴を見る", points_path

    .panel.panel-default
      .panel-body
        = link_to "日記を書く", new_diary_path
        - latest_evaluation_diary = current_user.diaries.includes(:diary_evaluations).order("diary_evaluations.created_at DESC").where.not(diary_evaluations: { id: nil}).first
        - if latest_evaluation_diary.present?
          %div 新着Good!
          = link_to "#{latest_evaluation_diary.title}に#{latest_evaluation_diary.diary_evaluations.includes(:user).first.user.nickname}がGood!しました", latest_evaluation_diary

        - latest_comment_diary = current_user.diaries.includes(:diary_comments).order("diary_comments.created_at DESC").where.not(diary_comments: { id: nil}).first
        - if latest_comment_diary.present?
          %div 新着コメント
          = link_to "#{latest_comment_diary.title}に#{latest_comment_diary.diary_comments.includes(:user).first.user.nickname}がコメントしました", latest_comment_diary

  .col-lg-9
    -if notice
      %p.alert.alert-dismissible.alert-warning#notice= notice

    - @diaries.each do |diary| 
      .panel.panel-default
        .panel-body
          .col-lg-12
            .col-lg-2.text-center
              = image_tag(diary.user.img_filename, class: 'img-circle', size: "50x50")
            .col-lg-10
              %p= diary.title
              %p
                %span= diary.user.nickname
                %span= diary_created_at_ago(diary)
          = link_to diary do
            .well.col-lg-12
              - if diary.img_filename
                .col-lg-4
                  = image_tag(diary.img_filename, class: 'img-rounded', alt: "#{diary.title}", size: "200x200")
                .col-lg-8
                  = simple_format(diary.content)
              - else
                .col-lg-12
                  = simple_format(diary.content)

  %br

  = paginate @diaries
